<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <TextView
        android:layout_width="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/erweimaid"
        android:text="二维码ID"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/erweimaidshuru"
        android:hint="请输入"/>




    <TextView
        android:layout_width="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/xingming"
        android:text="姓名"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/xingmingshuru"
        android:hint="请输入"/>




    <TextView
        android:layout_width="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/shenfenzhenghao"
        android:text="身份证号"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shenfenzhenghaoshuru"
        android:hint="请输入"/>



    <TextView
        android:layout_width="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/dianhua"
        android:text="电话"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dianhuashuru"
        android:hint="请输入"/>



    <TextView
        android:layout_width="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/juzhuxiaoqu"
        android:text="居住小区"
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/xuanzejuzhuxiaoqu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>